<Window x:Name="window" x:Class="IP查询.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IP查询"
        mc:Ignorable="d"
        Title="IP地址查询工具" Height="350" Width="560" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="TB1" Grid.Row="0" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Height="30" Width="220" FontSize="25"/>
        <Button Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="80" Height="30" Click="Button_Click" IsDefault="True">查询</Button>
        <TextBlock x:Name="tb2" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,-60" FontSize="15">这里将显示查询结果</TextBlock>
    </Grid>
</Window>
